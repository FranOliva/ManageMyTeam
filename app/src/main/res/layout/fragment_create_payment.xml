<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/size_sixteen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <es.us.managemyteam.ui.view.input.EditableTextView
            android:id="@+id/create_payment__edit__concept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_twentyfour"
            app:input_hint="Pago de la ficha"
            app:input_header="Concepto"
            app:input_type="text" />

        <es.us.managemyteam.ui.view.input.EditableTextView
            android:id="@+id/create_payment__edit__quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_twentyfour"
            app:input_header="Cantidad"
            app:input_hint="12"
            app:input_type="number" />

    </LinearLayout>

    <es.us.managemyteam.ui.view.loading_button.LoadingButtonView
        android:id="@+id/create_payment__btn__send"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:btn_background_color="@color/primaryDark"
        app:btn_text="Enviar"
        app:btn_text_color="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>