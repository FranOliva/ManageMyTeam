<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:padding="@dimen/size_sixteen">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/empty_requests__img__icon"
            android:layout_width="@dimen/size_onehundredandtwenty"
            android:layout_height="@dimen/size_onehundredandtwenty"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/size_fourty"
            app:srcCompat="@drawable/ic_good_job" />

        <TextView
            android:id="@+id/empty_requests__label__text"
            style="@style/Regular.Twenty.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/request_empty" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>