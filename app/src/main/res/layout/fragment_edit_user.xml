<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_grey"
    android:padding="@dimen/size_sixteen">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/edit_user__img__back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_twenty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        style="@style/Bold.Twenty.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_twenty"
        android:text="@string/edit_user_question"
        app:layout_constraintBottom_toBottomOf="@id/edit_user__img__back"
        app:layout_constraintStart_toEndOf="@id/edit_user__img__back"
        app:layout_constraintTop_toTopOf="@id/edit_user__img__back" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_fourty"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_user__img__back">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/edit_user__container__profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_sixteen"
            android:layout_marginTop="@dimen/size_six"
            android:layout_marginEnd="@dimen/size_sixteen"
            android:layout_marginBottom="@dimen/size_six"
            android:background="@color/white"
            android:elevation="@dimen/size_six"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingStart="@dimen/size_twentyfour"
            android:paddingTop="@dimen/size_twenty"
            android:paddingEnd="@dimen/size_twentyfour"
            android:paddingBottom="@dimen/size_twenty">

            <TextView
                android:id="@+id/edit_user__label__profile"
                style="@style/Medium.Eighteen.Black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_sixteen"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/edit_user_personal_data"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/edit_user__img__profile_next"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/edit_user__img__profile_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow_right"
                app:tint="@color/bluegrey" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/edit_user__container__email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_sixteen"
            android:layout_marginTop="@dimen/size_twenty"
            android:layout_marginEnd="@dimen/size_sixteen"
            android:layout_marginBottom="@dimen/size_six"
            android:background="@color/white"
            android:elevation="@dimen/size_six"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingStart="@dimen/size_twentyfour"
            android:paddingTop="@dimen/size_twenty"
            android:paddingEnd="@dimen/size_twentyfour"
            android:paddingBottom="@dimen/size_twenty">

            <TextView
                android:id="@+id/edit_user__label__email"
                style="@style/Medium.Eighteen.Black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_sixteen"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/edit_user_email"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/edit_user__img__email_next"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/edit_user__img__email_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow_right"
                app:tint="@color/bluegrey" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/edit_user__container__password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_sixteen"
            android:layout_marginTop="@dimen/size_twenty"
            android:layout_marginEnd="@dimen/size_sixteen"
            android:layout_marginBottom="@dimen/size_six"
            android:background="@color/white"
            android:elevation="@dimen/size_six"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingStart="@dimen/size_twentyfour"
            android:paddingTop="@dimen/size_twenty"
            android:paddingEnd="@dimen/size_twentyfour"
            android:paddingBottom="@dimen/size_twenty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_user__img__back">

            <TextView
                android:id="@+id/edit_user__label__password"
                style="@style/Medium.Eighteen.Black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_sixteen"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/edit_user_password"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/edit_user__img__next_password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/edit_user__img__next_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow_right"
                app:tint="@color/bluegrey" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>