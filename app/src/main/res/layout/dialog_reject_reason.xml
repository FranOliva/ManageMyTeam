<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/size_fourty">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rounded_white"
        android:orientation="vertical"
        android:padding="@dimen/size_sixteen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/dialog_reject_reason__img__close"
            android:layout_width="@dimen/size_twenty"
            android:layout_height="@dimen/size_twenty"
            android:layout_gravity="end"
            app:srcCompat="@drawable/ic_refuse"
            app:tint="@color/primaryWithAlpha" />

        <TextView
            style="@style/Bold.Sixteen.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_sixteen"
            android:gravity="center"
            android:text="@string/dialog_reject_reason_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/dialog_reject_reason__input__reject_reason"
            style="@style/Regular.Fourteen.Black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_sixty"
            android:layout_marginTop="@dimen/size_sixteen"
            android:background="@drawable/input_background_rounded"
            android:ellipsize="end"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:importantForAutofill="no"
            android:inputType="text"
            android:letterSpacing="0"
            android:paddingStart="@dimen/size_twenty"
            android:paddingLeft="@dimen/size_twenty"
            android:paddingTop="@dimen/size_sixteen"
            android:paddingEnd="@dimen/size_twenty"
            android:paddingRight="@dimen/size_twenty"
            android:paddingBottom="@dimen/size_sixteen"
            android:textColorHint="@color/primaryWithAlpha" />

        <TextView
            android:id="@+id/dialog_reject_reason__label__error"
            style="@style/Regular.Fourteen.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_sixteen"
            android:text="@string/dialog_reject_reason_error"
            android:textColor="@color/red"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_reject_reason__btn__send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_sixteen"
            android:background="@drawable/button_borders_background"
            android:backgroundTint="@color/primary"
            android:text="@string/create_payment_send"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>