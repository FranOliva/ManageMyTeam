<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/my_calls__pager__slide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/my_calls__tab__items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/my_calls__tab__pending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/my_calls_pending" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/my_calls__tab__accepted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/my_calls_accepted" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/my_calls__tab__rejected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/my_calls_rejected" />

        </com.google.android.material.tabs.TabLayout>

    </androidx.viewpager.widget.ViewPager>

</androidx.constraintlayout.widget.ConstraintLayout>